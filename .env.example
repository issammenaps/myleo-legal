# Myleo Chatbot Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
CORS_ORIGIN=*

# Main Database (Chatbot Database)
DB_HOST=localhost
DB_PORT=3306
DB_USER=chatbot_user
DB_PASSWORD=your_password_here
DB_NAME=myleo_chatbot
DB_CONNECTION_LIMIT=10
DB_SSL=false

# External Database (FAQ Source Database)
EXT_DB_HOST=localhost
EXT_DB_PORT=3306
EXT_DB_USER=readonly_user
EXT_DB_PASSWORD=your_readonly_password
EXT_DB_NAME=myleo_main
EXT_FAQ_TABLE=faqs
EXT_COL_ID=id
EXT_COL_TITLE=title
EXT_COL_LANG=language_code
EXT_COL_ACTIVE=is_active
EXT_COL_KEYWORDS=meta_keywords
EXT_COL_DESCRIPTION=meta_description
EXT_COL_PRODUCT_NAME=product_name
EXT_COL_PRODUCT_REF=product_ref
EXT_COL_RUBRIQUE=rubrique
EXT_COL_UPDATED=last_updated
EXT_COL_QA_DATA=qa_data

# Cache Configuration
CACHE_MAX_ENTRIES=1000
CACHE_TTL=300000
CACHE_CHECK_PERIOD=60000

# Zendesk Configuration
ZENDESK_DOMAIN=myleo.zendesk.com
ZENDESK_EMAIL=support@myleo.com
ZENDESK_TOKEN=your_zendesk_token_here
ZENDESK_API_URL=https://myleo.zendesk.com/api/v2
ZENDESK_DEFAULT_STATUS=new
ZENDESK_DEFAULT_PRIORITY=normal
ZENDESK_DEFAULT_TYPE=question
ZENDESK_DEFAULT_COLLABORATOR=
ZENDESK_DEFAULT_GROUP_ID=
ZENDESK_DEFAULT_TAGS=chatbot,escalation

# Chat Configuration
CHAT_MAX_MESSAGE_LENGTH=500
CHAT_SESSION_TIMEOUT=1800000
CHAT_MAX_MESSAGES=50
CHAT_DEFAULT_LANGUAGE=fr
CHAT_SUPPORTED_LANGUAGES=fr,en
CHAT_SEARCH_THRESHOLD=0.6
CHAT_MAX_SEARCH_RESULTS=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/chatbot.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRATION=24h

# Widget Configuration
WIDGET_DEFAULT_THEME=myleo
WIDGET_MAX_WIDTH=400px
WIDGET_MAX_HEIGHT=600px
WIDGET_DEFAULT_POSITION=bottom-right
WIDGET_Z_INDEX=9999
WIDGET_ANIMATION_DURATION=300