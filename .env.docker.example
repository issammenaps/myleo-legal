# MyLeo Chatbot - Docker Environment Configuration
# Copy this file to .env and configure with your actual values

# ============================================
# MySQL Database Configuration
# ============================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_change_me
DB_NAME=myleo_chatbot
DB_USER=chatbot_user
DB_PASSWORD=your_secure_chatbot_password_change_me

# ============================================
# External API Configuration
# ============================================
EXTERNAL_API_BASE_URL=https://api.myleo.legal
EXTERNAL_API_TOKEN=your_api_token_here
EXTERNAL_API_FAQ_ENDPOINT=/api/faqs
EXTERNAL_API_MAX_RECORDS=1000

# ============================================
# Zendesk Configuration
# ============================================
ZENDESK_DOMAIN=myleo.zendesk.com
ZENDESK_EMAIL=support@myleo.com
ZENDESK_TOKEN=your_zendesk_api_token_here

# ============================================
# Application Configuration
# ============================================
LOG_LEVEL=info
CACHE_MAX_ENTRIES=1000
CACHE_TTL=300000

# ============================================
# Domain Configuration (for SSL)
# ============================================
DOMAIN=chatbot.myleo.com
